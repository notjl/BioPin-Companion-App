<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardview_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".main.TypeFragment">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/signal_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signal_type"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/cardview_type"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <RadioGroup
                android:id="@+id/signal_option"
                android:checkedButton="@id/brain_option"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/signal_type"
                app:layout_constraintStart_toStartOf="parent"
                >

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/brain_option"
                    android:button="@color/transparent"
                    android:background="@drawable/custom_radio_selector"
                    android:drawableTop="@drawable/brainx16"
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="center"
                    android:layout_marginTop="6dp"
                    android:text="@string/brain"
                    />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/muscle_option"
                    android:button="@color/transparent"
                    android:background="@drawable/custom_radio_selector"
                    android:drawableTop="@drawable/musclex16"
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="center"
                    android:layout_marginTop="6dp"
                    android:text="@string/muscle"
                    />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/eyes_option"
                    android:button="@color/transparent"
                    android:background="@drawable/custom_radio_selector"
                    android:drawableTop="@drawable/eyesx16"
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:textAlignment="center"
                    android:layout_marginTop="6dp"
                    android:text="@string/eyes"
                    />

            </RadioGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                app:layout_constraintTop_toBottomOf="@id/signal_option"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                app:layout_constraintTop_toBottomOf="@id/signal_option"
                app:layout_constraintEnd_toStartOf="@id/next_button"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.TypeFragment">

        <RadioGroup
            android:id="@+id/signal_option"
            android:checkedButton="@id/brain_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/brain_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brain"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/muscle_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/muscle"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/eyes_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eyes"
                />

        </RadioGroup>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="93dp"
            android:text="next"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toBottomOf="@+id/signal_option" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="99dp"
            android:text="back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signal_option" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>