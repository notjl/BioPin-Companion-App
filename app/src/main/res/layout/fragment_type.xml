<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/homepd_background">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardview_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                tools:context=".main.TypeFragment">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/signal_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signal_type"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/cardview_type"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <RadioGroup
                    android:id="@+id/signal_option"
                    android:checkedButton="@id/brain_option"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/signal_type"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/brain_option"
                        android:button="@color/transparent"
                        android:background="@drawable/custom_radio_selector"
                        android:drawableTop="@drawable/brainx16"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="10dp"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"
                        android:text="@string/brain"
                        />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/muscle_option"
                        android:button="@color/transparent"
                        android:background="@drawable/custom_radio_selector"
                        android:drawableTop="@drawable/musclex16"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="10dp"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"
                        android:text="@string/muscle"
                        />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/eyes_option"
                        android:button="@color/transparent"
                        android:background="@drawable/custom_radio_selector"
                        android:drawableTop="@drawable/eyesx16"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"
                        android:text="@string/eyes"
                        />

                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardview_1"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/next" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            app:layout_constraintTop_toBottomOf="@id/cardview_1"
            app:layout_constraintEnd_toStartOf="@id/next_button"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>