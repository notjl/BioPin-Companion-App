<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.pd.main.PdViewModel" />
    </data>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardview_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".main.createupdate.SummaryFragment">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="@id/cardview_summary"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/hertz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="48dp"
                    tools:text="8 Hz"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/type_summary"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    app:srcCompat="@drawable/eegxicon" />
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/direction_summary"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="190dp"
                    app:srcCompat="@drawable/downx16" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="230dp"
                    tools:text="left"
                    android:text="@{viewModel.direction}"
                    />
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_button"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:text="@string/submit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardview_summary"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_button"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:text="@string/back"
                app:layout_constraintStart_toStartOf="@id/submit_button"
                app:layout_constraintBottom_toBottomOf="@id/cardview_summary"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>