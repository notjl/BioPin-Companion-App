<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.CreateSignalFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signal_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signal_hz"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:importantForAutofill="no"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/signal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signal_type"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textlayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RadioGroup
            android:id="@+id/signal_option"
            android:checkedButton="@id/brain_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/signal_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/brain_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brain"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/muscle_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/muscle"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/eyes_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eyes"
                />

        </RadioGroup>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/signal_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direction"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/signal_option"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/direction_option"
            android:checkedButton="@id/forward_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/signal_direction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/forward_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forward"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/left_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/left"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/right_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/right"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/backward_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backward"
                />

        </RadioGroup>

        <RelativeLayout
            android:id="@+id/submitLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/direction_option">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/submit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="6dp"
                android:layout_toStartOf="@id/submit_button"
                android:layout_toLeftOf="@id/submit_button"
                android:text="@string/cancel" />

        </RelativeLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav"
            android:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>