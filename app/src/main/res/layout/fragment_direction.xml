<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.DirectionFragment">

        <RadioGroup
            android:id="@+id/direction_option"
            android:checkedButton="@id/forward_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/forward_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forward"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/left_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/left"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/right_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/right"
                />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/backward_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backward"
                />

        </RadioGroup>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="93dp"
            android:text="next"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toBottomOf="@+id/direction_option" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="99dp"
            android:text="back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/direction_option" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>