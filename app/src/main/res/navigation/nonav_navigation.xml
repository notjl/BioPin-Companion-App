<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nonav_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.pd.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/actionloginFragmenttoregisterFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.pd.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/actionregisterFragmenttologinFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>