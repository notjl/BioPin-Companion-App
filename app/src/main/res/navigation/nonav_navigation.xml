<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nonav_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.pd.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/actionloginFragmenttoregisterFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.pd.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/actionregisterFragmenttologinFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_aboutFragment2"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_registerFragment_to_faqFragment2"
            app:destination="@id/faqFragment" />
    </fragment>
    <fragment
        android:id="@+id/faqFragment"
        android:name="com.example.pd.menu.FaqFragment"
        android:label="FaqFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.pd.menu.AboutFragment"
        android:label="AboutFragment" />
</navigation>