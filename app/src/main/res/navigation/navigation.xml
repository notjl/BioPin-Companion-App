<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.pd.register.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_registerFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.pd.login.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainPdFragment"
            app:destination="@id/mainPdFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.pd.menu.AboutFragment"
        android:label="About" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.pd.menu.HomeFragment"
        android:label="Home" />
    <fragment
        android:id="@+id/faqFragment"
        android:name="com.example.pd.menu.FaqFragment"
        android:label="FAQ" />
    <fragment
        android:id="@+id/mainPdFragment"
        android:name="com.example.pd.main.MainPdFragment"
        android:label="Home">
        <action
            android:id="@+id/action_mainPdFragment_to_signalFragment"
            app:destination="@id/signalFragment" />
        <action
            android:id="@+id/action_mainPdFragment_to_signalApiFragment"
            app:destination="@id/signalApiFragment" />
    </fragment>
    <fragment
        android:id="@+id/signalFragment"
        android:name="com.example.pd.main.SignalFragment"
        android:label="Signal List">
        <action
            android:id="@+id/action_signalFragment_to_createSignalFragment"
            app:destination="@id/createSignalFragment" />
        <action
            android:id="@+id/action_signalFragment_to_updateSignalFragment"
            app:destination="@id/updateSignalFragment" />
    </fragment>
    <fragment
        android:id="@+id/createSignalFragment"
        android:name="com.example.pd.main.CreateSignalFragment"
        android:label="Create Signal"
        tools:layout="@layout/fragment_create_signal">
        <action
            android:id="@+id/action_createSignalFragment_to_signalFragment"
            app:destination="@id/signalFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateSignalFragment"
        android:name="com.example.pd.main.UpdateSignalFragment"
        android:label="Update Signal">
        <argument
            android:name="signal_id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/signalApiFragment"
        android:name="com.example.pd.main.SignalApiFragment"
        android:label="Signal API" />
</navigation>