<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainPdFragment">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.pd.register.RegisterFragment"
        >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_registerFragment_to_settingsFragment"
            app:destination="@id/faqFragment" />
        <action
            android:id="@+id/action_registerFragment_to_signalFragment"
            app:destination="@id/signalFragment" />
        <action
            android:id="@+id/action_registerFragment_to_signalApiFragment"
            app:destination="@id/signalApiFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.pd.login.LoginFragment"
        >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainPdFragment"
            app:destination="@id/mainPdFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.pd.menu.AboutFragment"
        />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.pd.menu.HomeFragment"
        >
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/faqFragment"
        android:name="com.example.pd.menu.FaqFragment"
        />
    <fragment
        android:id="@+id/mainPdFragment"
        android:name="com.example.pd.main.MainPdFragment"
        >
        <action
            android:id="@+id/action_mainPdFragment_to_signalFragment"
            app:destination="@id/signalFragment" />
        <action
            android:id="@+id/action_mainPdFragment_to_signalApiFragment"
            app:destination="@id/signalApiFragment" />
    </fragment>
    <fragment
        android:id="@+id/signalFragment"
        android:name="com.example.pd.main.SignalFragment"
        >
        <action
            android:id="@+id/action_signalFragment_to_createSignalFragment"
            app:destination="@id/createSignalFragment" />
        <action
            android:id="@+id/action_signalFragment_to_updateSignalFragment"
            app:destination="@id/updateSignalFragment" />
        <action
            android:id="@+id/action_signalFragment_to_hertzFragment"
            app:destination="@id/hertzFragment" />
    </fragment>
    <fragment
        android:id="@+id/createSignalFragment"
        android:name="com.example.pd.main.CreateSignalFragment"
        tools:layout="@layout/fragment_create_signal">
        <action
            android:id="@+id/action_createSignalFragment_to_signalFragment"
            app:destination="@id/signalFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateSignalFragment"
        android:name="com.example.pd.main.UpdateSignalFragment"
        >
        <argument
            android:name="signal_id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/signalApiFragment"
        android:name="com.example.pd.main.SignalApiFragment"

        />
    <fragment
        android:id="@+id/hertzFragment"
        android:name="com.example.pd.main.createupdate.HertzFragment"
        >

        <argument
            android:name="signal_id"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_hertzFragment_to_typeFragment"
            app:destination="@id/typeFragment" />
    </fragment>
    <fragment
        android:id="@+id/typeFragment"
        android:name="com.example.pd.main.createupdate.TypeFragment"

        >

        <argument
            android:name="signal_id"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_typeFragment_to_directionFragment"
            app:destination="@id/directionFragment" />
    </fragment>
    <fragment
        android:id="@+id/directionFragment"
        android:name="com.example.pd.main.createupdate.DirectionFragment"

        tools:layout="@layout/fragment_direction">
        <argument
            android:name="signal_id"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_directionFragment_to_summaryFragment"
            app:destination="@id/summaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/summaryFragment"
        android:name="com.example.pd.main.createupdate.SummaryFragment"
        >

        <argument
            android:name="signal_id"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_summaryFragment_to_signalFragment"
            app:destination="@id/signalFragment" />
    </fragment>
</navigation>