<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.pd.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.pd.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainPdFragment"
            app:destination="@id/mainPdFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.pd.menu.AboutFragment"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.pd.menu.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.pd.menu.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/mainPdFragment"
        android:name="com.example.pd.pd.MainPdFragment"
        android:label="MainPdFragment" >
        <action
            android:id="@+id/action_mainPdFragment_to_signalFragment"
            app:destination="@id/signalFragment" />
    </fragment>
    <fragment
        android:id="@+id/signalFragment"
        android:name="com.example.pd.pd.crud.SignalFragment"
        android:label="SignalFragment" >
        <action
            android:id="@+id/action_signalFragment_to_createSignalFragment"
            app:destination="@id/createSignalFragment" />
    </fragment>
    <fragment
        android:id="@+id/createSignalFragment"
        android:name="com.example.pd.pd.crud.CreateSignalFragment"
        android:label="fragment_create_signal"
        tools:layout="@layout/fragment_create_signal" >
        <action
            android:id="@+id/action_createSignalFragment_to_signalFragment"
            app:destination="@id/signalFragment" />
    </fragment>
</navigation>